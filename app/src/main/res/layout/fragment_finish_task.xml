<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinishTaskFragment"
    android:background="@color/teal_200"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#009688"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="10dp"
        android:text="Заверщенные задачи"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:textSize="25dp"
        android:padding="8dp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/finish_tasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:textColor="@color/teal_700"
        android:textSize="16sp"
        android:hint="Завершенные задачи"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:layout_margin="10dp"
        android:text="Добавить новую заверщенную задачу"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/add_finished_task"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="50dp"
        android:text="Удалить все задачи"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/delete_finished_tasks"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:id="@+id/finished_tasks"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:hint="Заверщенные задачи"
        />

</LinearLayout>