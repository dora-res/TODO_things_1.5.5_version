<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RepitersTasksFragment"
    android:orientation="vertical"
    android:background="#DC6D6D">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EF1E0E"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="10dp"
        android:text="Повторяющиеся задачи"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:textSize="25dp"
        android:padding="8dp"
        android:textStyle="bold"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Повторящиеся задачи"
        android:layout_margin="10dp"
        android:id="@+id/new_repeat_task"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:layout_margin="10dp"
        android:text="Добавить новую повторяющуюся задачу"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/add_repeat_task"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="50dp"
        android:text="Удалить все задачи"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/delete_repeat_task"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:id="@+id/repeat_tasks"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:hint="Повторяющеся задачи"

        />
</LinearLayout>